---

{
    PROJECTS.map(({ title, description, tags, images, github, demo }) => (
        <article class="flex flex-col p-4 border rounded-md border-neutral-800 min-w-72">
            <div class="flex items-center justify-between">
                <a class="flex items-center gap-2" href={demo} target="_blank">
                    <h3 class="text-xl font-semibold">{title}</h3>
                    <Link />
                </a>
                <a href={github} target="_blank">
                    <GitHubIcon class="size-5" />
                </a>
            </div>
            <p class="mt-1 text-xs">{description}</p>
            <ul class="grid grid-cols-3 mt-5">
                {tags.map((tag, index) => (
                    <li
                        class={`flex md:justify-around justify-${index === 0 || index === 3 ? "start" : index === 1 || index === 4 ? "center" : "end"}`}
                    >
                        <span class="w-20 min-w-20 mb-1 flex justify-center bg-gray-100 text-gray-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">
                            {tag}
                        </span>
                    </li>
                ))}
            </ul>
        </article>
    ))
}
