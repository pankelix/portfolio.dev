---
import GitHubIcon from "../icons/GitHubIcon.astro";
import Link from "../icons/LinkIcon.astro";

const PROJECTS = [
    {
        title: "SWATSA Website ",
        description: "Website for the company SWATSA, who provides security for vessels and ports",
        demo: "https://www.swatsa.com/",
        github: "",
        tags: ["JavaScript", "TypeScript", "NextJS", "React", "Firebase", "Tailwind"],
    },
    {
        title: "DnD Spell Manager ",
        description: "🧙‍♂️ Manage your DnD spells easily",
        demo: "https://dnd-spell-manager.vercel.app/",
        github: "https://github.com/pankelix/dnd-spell-manager",
        tags: ["JavaScript", "TypeScript", "NextJS", "React", "Tailwind"],
    },/*
    {
        title: "Tiddy ",
        description: "🧽 Periodic Chores Manager",
        demo: "https://tiddy.netlify.app/",
        github: "https://github.com/pankelix/Tiddy-APP/tree/main",
        images: ["https://i.imgur.com/ssW1z9Z.png"],
        tags: [
            "JavaScript",
            "MongoDB",
            "ExpressJS",
            "React",
            "NodeJS",
            "Tailwind",
        ],
    },
    {
        title: "FakE-Commerce ",
        description: "🛒 An e-Commerce of fake items",
        demo: "https://pankel-fake-ecommerce.netlify.app/",
        github: "https://github.com/pankelix/store/tree/deploy",
        images: ["https://i.imgur.com/ssW1z9Z.png"],
        tags: ["Angular", "TypeScript", "Tailwind"],
    }, */
];
---

{
    PROJECTS.map(({ title, description, tags, github, demo }) => (
        <article class="flex flex-col p-4 border rounded-md border-neutral-800 min-w-72">
            <div class="flex items-center justify-between">
                <a class="flex items-center gap-6" href={demo} target="_blank">
                    <h3 class="text-xl font-semibold">{title}</h3>
                    <div class="flex gap-1">
                        <Link />
                        <p class="text-sm text-neutral-400">try demo</p>
                    </div>
                </a>
                {github && <a href={github} target="_blank">
                    <GitHubIcon class="size-5" />
                </a>}
            </div>
            <p class="mt-1 text-xs">{description}</p>
            <ul class="grid grid-cols-3 mt-5">
                {tags.map((tag, index) => (
                    <li
                        class={`flex md:justify-around justify-${index === 0 || index === 3 ? "start" : index === 1 || index === 4 ? "center" : "end"}`}
                    >
                        <span class="w-20 min-w-20 mb-1 flex justify-center bg-gray-100 text-gray-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">
                            {tag}
                        </span>
                    </li>
                ))}
            </ul>
        </article>
    ))
}
